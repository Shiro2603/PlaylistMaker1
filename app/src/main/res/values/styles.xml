<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16dp</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconPadding">@dimen/icon_padding_8dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ImageSettingStyle">
        <item name="android:layout_marginTop">@dimen/margin_19dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_12dp</item>
    </style>
</resources>